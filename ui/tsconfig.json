{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": false,
        "jsx": "react",
        "outDir": "./lib",
        "types": [
          "node"
        ],
        "typeRoots": [
          "../node_modules",
          "../node_modules/@types"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "compileOnSave": false
}
